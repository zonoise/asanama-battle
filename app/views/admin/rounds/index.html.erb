<% b = Battle.find(params[:battle_id]) %>
<h2>Battle</h2>
<label>title</label><%= b.title %> <br>
<label>description</label><%= b.description %>
<h2>Rounds</h2>

<table>
  <tr>
    <th>start</th><th>end</th>
  </tr>
  <% for r in @rounds %>
    <tr>
      <td><%= r.start %></td>
      <td><%= r.end %></td>

      <td>
        <%= link_to("Delete" ,
                     admin_battle_round_path(r.id,:battle_id=> b.id) ,
                     :method => :delete) %>
      </td>

      <td>
        <%= link_to("Edit" ,
                     edit_admin_battle_round_path(r.id,:battle_id=> b.id)) %>
      </td>

      </tr>
  <% end %>
